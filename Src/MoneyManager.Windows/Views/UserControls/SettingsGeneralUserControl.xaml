<UserControl
    x:Class="MoneyManager.Windows.Views.UserControls.SettingsGeneralUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <StackPanel>
            <TextBlock Text="Add Explanation here" />
            <ToggleSwitch VerticalAlignment="Center"
                          Header="Upload and download backup manually"
                          x:Uid="AutoBackupSettingHeader"
                          IsOn="{Binding IsAutoBackupEnabled, Mode=TwoWay}"
                          OnContent="yes" />
        </StackPanel>
    </Grid>
</UserControl>
