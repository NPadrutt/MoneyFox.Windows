<Page x:Class="MoneyManager.Windows.Views.BackupView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:converter="using:MoneyManager.Windows.Converter"
      xmlns:userControls="using:MoneyManager.Windows.Views.UserControls"
      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:core="using:Microsoft.Xaml.Interactions.Core"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <interactivity:Interaction.Behaviors>
        <core:EventTriggerBehavior EventName="Loaded">
            <core:InvokeCommandAction Command="{Binding LoadedCommand, Mode=OneWay}" />
        </core:EventTriggerBehavior>
    </interactivity:Interaction.Behaviors>

    <Page.Resources>
        <converter:BooleanToVisibilityConverter x:Key="BooleanVisibilityConverter" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <userControls:PageHeader>
            <userControls:PageHeader.HeaderContent>
                <TextBlock Style="{ThemeResource PageTitleTextBlockStyle}" Text="Backup" x:Uid="BackupTitle" />
            </userControls:PageHeader.HeaderContent>
        </userControls:PageHeader>

        <StackPanel Grid.Row="1"
                    Margin="19,9.5,19,0"
                    EntranceNavigationTransitionInfo.IsTargetElement="True">
            <StackPanel>
                <TextBlock x:Uid="BackupInformation"
                           Text="BackupInformation"
                           Margin="-5,0,0,7"
                           TextWrapping="WrapWholeWords" />
                <Button Content="Create Backup"
                        x:Uid="CreateBackup"
                        Command="{Binding BackupCommand}"
                        HorizontalAlignment="Stretch"
                        Margin="0,0,0,7" />
                <TextBlock x:Uid="RestoreInformation"
                           Text="RestoreInformation"
                           Margin="-5,5,0,7"
                           TextWrapping="WrapWholeWords" />
                <Button Content="Restore"
                        x:Uid="RestoreBackup"
                        Command="{Binding RestoreCommand}"
                        HorizontalAlignment="Stretch" />
                <StackPanel Orientation="Horizontal"
                            Margin="0,15,0,7">
                    <TextBlock x:Uid="BackupLastModifiedText"
                               Text="Last Backup created at:"
                               Style="{StaticResource DeemphasizedBodyTextBlockStyle}"
                               Margin="-5,0,0,0"/>
                    <TextBlock Text="{Binding BackupLastModified}"
                               Style="{StaticResource DeemphasizedBodyTextBlockStyle}"
                               Margin="5,0,0,0" />

                </StackPanel>
            </StackPanel>
        </StackPanel>

        <Grid HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Background="Black"
              Opacity="0.8"
              Grid.Row="0"
              Grid.RowSpan="2"
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanVisibilityConverter}, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <ProgressRing IsActive="{Binding IsLoading}"
                              Background="Transparent" />
                <TextBlock Text="loading..." />
            </StackPanel>
        </Grid>
    </Grid>
</Page>